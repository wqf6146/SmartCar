<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/dark_bg"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:src="@mipmap/ic_nor_bluemessage"
                android:id="@+id/im_img_message"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:layout_height="30dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:padding="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:id="@+id/im_tv_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/font_nor_12"
                android:gravity="center|start"
                android:text="尊敬的车主，您的爱车翼FV168R的车锁状态发生改变，请您及时去人。"
                android:layout_above="@+id/im_tv_date"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/im_tv_date"
                android:textColor="@color/gray_font"
                android:textSize="@dimen/font_nor_12"
                android:text="2016-10-07 19:36:22"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/gray_line"
        android:layout_height="1px"/>
</LinearLayout>
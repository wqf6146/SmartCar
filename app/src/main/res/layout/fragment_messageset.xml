<?xml version="1.0" encoding="utf-8"?>
<com.yhkj.smartcar.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black_bg_21"
    android:layout_height="match_parent">

    <include
        layout="@layout/merge_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <RelativeLayout
        android:id="@+id/fm_rl_allowsysmes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray_bg"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="允许系统消息"
            android:textColor="@color/white"
            android:textSize="@dimen/font_nor_14" />

        <ImageView
            android:id="@+id/ie_img_load_sysmes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/fm_btn_fm_rl_allowsysmes"
            android:background="@drawable/common_anim_list_loading_tiny"
            android:visibility="gone" />
        <com.yhkj.smartcar.view.SwitchView
            android:id="@+id/fm_btn_fm_rl_allowsysmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            app:hasShadow="false"
            android:paddingRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_line"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/fm_rl_xx"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray_bg"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fs_img_messagge"
            android:text="允许驻车时车身状态提醒"
            android:textColor="@color/white"
            android:textSize="@dimen/font_nor_14" />

        <ImageView
            android:id="@+id/ie_img_load_xx"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/fm_btn_fm_rl_xx"
            android:background="@drawable/common_anim_list_loading_tiny"
            android:visibility="gone" />
        <com.yhkj.smartcar.view.SwitchView
            android:id="@+id/fm_btn_fm_rl_xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            app:hasShadow="false"
            android:paddingRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_line"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/fm_rl_notification"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray_bg"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fs_img_checkupdate"
            android:text="允许消息或提醒推送"
            android:textColor="@color/white"
            android:textSize="@dimen/font_nor_14" />

        <ImageView
            android:id="@+id/ie_img_load_notification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/fm_btn_fm_rl_notification"
            android:background="@drawable/common_anim_list_loading_tiny"
            android:visibility="gone" />
        <com.yhkj.smartcar.view.SwitchView
            android:id="@+id/fm_btn_fm_rl_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            app:hasShadow="false"
            android:paddingRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</com.yhkj.smartcar.view.PercentLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.yhkj.smartcar.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black_bg"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <include
        layout="@layout/merge_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <com.yhkj.smartcar.view.PercentLinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_heightPercent="30%"
        android:gravity="center"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/fa_img_companylogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@mipmap/ic_nor_head"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="50%" />

        <TextView
            android:id="@+id/fs_tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="V1.0.0"
            android:textColor="@color/grayfont"
            android:textSize="@dimen/font_nor_16" />
    </com.yhkj.smartcar.view.PercentLinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:id="@+id/fa_rl_phone"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/fa_img_phone"
            android:src="@mipmap/ic_nor_kfphone"
            android:layout_marginLeft="10dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="客服电话：4008-123-123"
            android:id="@+id/fa_tv_companyphone"
            android:textSize="@dimen/font_nor_14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/fa_img_phone"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_line"
        android:layout_height="0.1px"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:id="@+id/fa_rl_server"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/fa_img_updatepwd"
            android:src="@mipmap/ic_nor_server"
            android:layout_marginLeft="10dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="服务协议"
            android:textSize="@dimen/font_nor_14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/fa_img_updatepwd"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="25dp"
            android:src="@mipmap/ic_btn_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_line"
        android:layout_height="0.1px"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:id="@+id/fa_rl_advance"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/fa_img_advance"
            android:src="@mipmap/ic_nor_advance"
            android:layout_marginLeft="10dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="意见反馈"
            android:textSize="@dimen/font_nor_14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/fa_img_advance"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="25dp"
            android:src="@mipmap/ic_btn_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_line"
        android:layout_height="0.1px"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:id="@+id/fa_rl_company"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/fa_img_company"
            android:src="@mipmap/ic_nor_company"
            android:layout_marginLeft="10dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="公司介绍"
            android:textSize="@dimen/font_nor_14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/fa_img_company"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="25dp"
            android:src="@mipmap/ic_btn_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/fm_tv_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Copyright ©2016 保定市缘汇软件开发有限公司"
        android:textColor="@color/grayfont"
        android:textSize="@dimen/font_nor_12"
        android:layout_marginBottom="5dp"
        />

</com.yhkj.smartcar.view.PercentLinearLayout>
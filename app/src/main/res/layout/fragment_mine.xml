<?xml version="1.0" encoding="utf-8"?>
<com.yhkj.smartcar.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/ic_nor_carbg"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <com.yhkj.smartcar.view.PercentLinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_heightPercent="50%"
        android:gravity="center"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/fm_img_user"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@mipmap/ic_nor_head"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="50%" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:src="@mipmap/ic_nor_phone"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/fm_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="15901234567"
                android:textColor="@color/white"
                android:textSize="@dimen/font_nor_16" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/fm_tv_carnumb"
            android:text="翼F V168R"
            android:textColor="@color/white"
            android:textSize="@dimen/font_nor_16"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
    </com.yhkj.smartcar.view.PercentLinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/fm_ll_settting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/background_ll_click"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_nor_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_nor_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fm_ll_equitment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/background_ll_click"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_nor_equipment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备管理"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_nor_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fm_ll_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/background_ll_click"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_nor_message" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_nor_14" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/fm_ll_chart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/background_ll_click"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_nor_chart_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据报表"
                    android:textColor="@color/grayfont"
                    android:textSize="@dimen/font_nor_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fm_ll_problem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/background_ll_click"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_nor_problem" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常见问题"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_nor_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fm_ll_aboutus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:background="@drawable/background_ll_click"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_nor_aboutus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于我们"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_nor_14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.yhkj.smartcar.view.PercentLinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/fm_tv_out"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_ll_style_white"
            android:gravity="center"
            android:text="退      出"
            android:textColor="@color/grayfont"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/font_nor_14"
            app:layout_heightPercent="70%"
            app:layout_widthPercent="80%" />
    </com.yhkj.smartcar.view.PercentLinearLayout>



</com.yhkj.smartcar.view.PercentLinearLayout>
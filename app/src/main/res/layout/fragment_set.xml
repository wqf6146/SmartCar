<?xml version="1.0" encoding="utf-8"?>
<com.yhkj.smartcar.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black_bg_21"
    android:layout_height="match_parent">

    <include
        layout="@layout/merge_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <RelativeLayout
        android:layout_width="0dp"
        android:id="@+id/fs_rl_updatepwd"
        app:layout_heightPercent="10%"
        android:background="@color/gray_bg"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/fs_img_updatepwd"
            android:src="@mipmap/ic_nor_pwd"
            android:layout_marginLeft="10dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="修改登录密码"
            android:textSize="@dimen/font_nor_14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/fs_img_updatepwd"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="25dp"
            android:src="@mipmap/ic_btn_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_line"
        android:layout_height="1px"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:id="@+id/fs_rl_message"
        app:layout_heightPercent="10%"
        android:background="@color/gray_bg"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/fs_img_messagge"
            android:src="@mipmap/ic_nor_message"
            android:layout_marginLeft="10dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="消息设置"
            android:textSize="@dimen/font_nor_14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/fs_img_messagge"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="25dp"
            android:src="@mipmap/ic_btn_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_line"
        android:layout_height="1px"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:id="@+id/fs_rl_checkupdate"
        app:layout_heightPercent="10%"
        android:background="@color/gray_bg"
        app:layout_widthPercent="100%"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/fs_img_checkupdate"
            android:src="@mipmap/ic_nor_update"
            android:layout_marginLeft="10dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="检测更新"
            android:textSize="@dimen/font_nor_14"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/fs_img_checkupdate"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_nor_12"
            android:text="当前版本: V1.0.0"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</com.yhkj.smartcar.view.PercentLinearLayout>
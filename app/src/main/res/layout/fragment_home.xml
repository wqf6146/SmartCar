<?xml version="1.0" encoding="utf-8"?>
<com.yhkj.smartcar.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/gray_bg"
    android:layout_height="match_parent">

    <com.youth.banner.Banner
        android:layout_width="0dp"
        android:id="@+id/fh_banner"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="100%"
        app:indicator_drawable_selected="@mipmap/ic_nor_banner_1"
        app:indicator_drawable_unselected="@mipmap/ic_nor_banner_2"
        app:indicator_margin="7dp"
        android:layout_height="0dp">
    </com.youth.banner.Banner>

    <com.yhkj.smartcar.view.PercentLinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%"
        android:gravity="center"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_nor_car_logo"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_nor_16"
            android:layout_margin="5dp"
            android:textColor="@color/car_blue"
            android:text="12km/0.5L"
            android:layout_height="wrap_content" />
    </com.yhkj.smartcar.view.PercentLinearLayout>

    <com.yhkj.smartcar.view.PercentLinearLayout
        android:layout_width="0dp"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%"
        android:orientation="vertical"
        android:layout_height="0dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/car_blue"/>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="0dp"
                app:layout_heightPercent="100%"
                android:layout_toLeftOf="@+id/fh_line_3"
                app:layout_widthPercent="49%"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="车内温度:"
                        android:id="@+id/fh_cnwd"
                        android:textSize="@dimen/font_nor_16"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fh_tv_cnwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="25°C"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_nor_16" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                app:layout_heightPercent="100%"
                android:layout_toRightOf="@+id/fh_line_3"
                app:layout_widthPercent="49%"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="车内湿度:"
                        android:id="@+id/fh_cnsd"
                        android:textSize="@dimen/font_nor_16"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fh_tv_cnsd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="25.0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_nor_16" />
                </LinearLayout>
            </RelativeLayout>


            <View
                android:layout_width="1px"
                android:layout_centerHorizontal="true"
                android:id="@+id/fh_line_3"
                android:background="@color/car_blue"
                android:layout_height="match_parent"/>

        </android.support.percent.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/car_blue"/>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="0dp"
                app:layout_heightPercent="100%"
                android:layout_toLeftOf="@+id/fh_line_1"
                app:layout_widthPercent="49%"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="日均里程:"
                        android:id="@+id/fh_rjlc"
                        android:textSize="@dimen/font_nor_16"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fh_tv_rjlc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="----"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_nor_16" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                app:layout_heightPercent="100%"
                android:layout_toRightOf="@+id/fh_line_1"
                app:layout_widthPercent="49%"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="续航里程:"
                        android:id="@+id/fh_xhlc"
                        android:textSize="@dimen/font_nor_16"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fh_tv_xhlc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="----"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_nor_16" />
                </LinearLayout>
            </RelativeLayout>


            <View
                android:layout_width="1px"
                android:layout_centerHorizontal="true"
                android:id="@+id/fh_line_1"
                android:background="@color/car_blue"
                android:layout_height="match_parent"/>

        </android.support.percent.PercentRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/car_blue"/>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="0dp"
                app:layout_heightPercent="100%"
                android:layout_toLeftOf="@+id/fh_line_2"
                app:layout_widthPercent="49%"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="总里程:"
                        android:id="@+id/fh_zlc"
                        android:textSize="@dimen/font_nor_16"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fh_tv_zlc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="----"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_nor_16" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                app:layout_heightPercent="100%"
                android:layout_toRightOf="@+id/fh_line_2"
                app:layout_widthPercent="49%"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="车辆状态:"
                        android:id="@+id/fh_clzt"
                        android:textSize="@dimen/font_nor_16"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fh_tv_clzt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="----"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_nor_16" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_centerHorizontal="true"
                android:background="@color/car_blue"
                android:id="@+id/fh_line_2"
                android:layout_height="match_parent"/>
        </android.support.percent.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/car_blue"/>
    </com.yhkj.smartcar.view.PercentLinearLayout>
    
</com.yhkj.smartcar.view.PercentLinearLayout>